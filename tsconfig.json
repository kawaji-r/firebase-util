{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
